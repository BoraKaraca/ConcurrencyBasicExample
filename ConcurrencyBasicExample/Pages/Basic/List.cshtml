@page
@model WebUI.Pages.Basic.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<span class="text-danger"> @TempData["errorMessage"]</span>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SampleViewModel.SampleItems[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SampleViewModel.SampleItems[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SampleViewModel.SampleItems[0].Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SampleViewModel.SampleItems[0].Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SampleViewModel.SampleItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
